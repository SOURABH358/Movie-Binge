extends layout 

block content 

    main.main
        .card-container
            each movie in movies
                .card
                    .card-hero
                        img(src=  `${movie.poster}` alt = "movie-poster" )
                    .card-title
                        DC #{movie.title}
                    .card-info
                        .rating= `${movie.ratings}  ${'‚≠ê'.repeat(Math.floor(movie.ratings/2))}`
                        .duration #{movie.runtime}
                    .description= movie.Description.slice(0,90) + '....'
                    a.more(href = `\movie\\${movie.slug}` target = "_blank" class = "more") Know More




    