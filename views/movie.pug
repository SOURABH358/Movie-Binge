extends layout

block content
    main.main
        .movie-container
            .movie-poster
                div
                    each poster in movie.posterList
                        img(src= `${poster}` alt = "movie-poster")
                p.slider.left-slider ‚óÄ
                p.slider.right-slider ‚ñ∂
            .movie-info
                p.movie-title #{movie.title}
                .movie-genre
                    each genre in movie.genre
                        div #{genre}
                .movie-about
                    p.movie-rating= `Imdb rating - ${movie.ratings}  ${'‚≠ê'.repeat(Math.floor(movie.ratings/2))}`
                    p.movie-duration üß≠ #{movie.runtime}
                p.movie-description Release Date - #{movie["release date"]}
                div 
                    p.subtitle Directors
                    p #{movie.directors}
                div
                    p.subtitle Writers
                    p #{movie.Writers}
                div
                    p.subtitle Description
                    p #{movie.Description}
                div.watch
                    a(href= movie.watch target = "_blank") ‚ñ∂ Watch Now
            
        .movie-cast
            h1 Movie Cast
            .cast-container
                each cast in movie.cast
                    .actors
                        div 
                            img(src= `${cast.image}` alt = "movie-cast")
                        p #{cast.name}


    